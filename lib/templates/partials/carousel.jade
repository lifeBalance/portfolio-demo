div#my-carousel.carousel.slide(data-ride="carousel")
  // Indicators
  ol.carousel-indicators
    li(data-target="#my-carousel" data-slide-to="0" class="active")
    li(data-target="#my-carousel" data-slide-to="1")
    li(data-target="#my-carousel" data-slide-to="2")
  
  // Wrapper for slides
  .carousel-inner(role="listbox")
    .item.active
      img(src="https://unsplash.it/700/400?image=885" alt="...")
      .carousel-caption
        h3 Yeah!
        a(href='#') See it live!
    .item
      img(src="https://unsplash.it/700/400?image=693" alt="...")
      .carousel-caption
        h3 Yeah!
        a(href='#') See it live!
    .item
      img(src="https://unsplash.it/700/400?image=628" alt="...")
      .carousel-caption
        h3 Yeah!
        a(href='#') See it live!
  
  // Controls
  a.left.carousel-control(href="#my-carousel" role="button" data-slide="prev")
    span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
    span.sr-only Previous
  a.right.carousel-control(href="#my-carousel" role="button" data-slide="next")
    span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
    span.sr-only Next
